<form action="/albums/<%= @album.id %>" method="post">
  
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%=@album.title%>"><br>

  <label for="artist-select">Select an Artist:</label>
  <select name="artist_id" id="artist-select">
    <%for artist in @artists%>
      <% if @album.artist_id == artist.id %> 
        <option selected value="<%=artist.id%>"><%=artist.name()%></option>
      <% else %>
        <option value="<%=artist.id%>"><%=artist.name()%></option>
      <%end%>  
    <%end%>
  </select><br>

  <label for="stock">Stock:</label>
  <input type="number" id="stock" name="stock" value="<%=@album.stock%>"><br>

  <input class="button" type="submit" value="Edit Album"><br>

</form>