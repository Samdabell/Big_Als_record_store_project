<form class="show" action="/albums/<%= @album.id %>" method="post">
  <div>
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%=@album.title%>"><br>

  <label for="artist-select">Select an Artist:</label>
  <select name="artist_id" id="artist-select">
    <%for artist in @artists%>
      <% if @album.artist_id == artist.id %> 
        <option selected value="<%=artist.id%>"><%=artist.name()%></option>
      <% else %>
        <option value="<%=artist.id%>"><%=artist.name()%></option>
      <%end%>  
    <%end%>
  </select><br>

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="<%=@album.genre%>"><br>

  <label for="year">Release Year:</label>
  <input type="number" id="year" name="year" value="<%=@album.year%>"><br>

  <label for="stock">Stock:</label>
  <input type="number" id="stock" name="stock" value="<%=@album.stock%>"><br>

  <label for="buy-price">Buy Price: £</label>
  <input type="number" id="buy-price" name="buy_price" value="<%=@album.buy_price%>"><br>

  <label for="sell-price">Sell Price: £</label>
  <input type="number" id="sell-price" name="sell_price" value="<%=@album.sell_price%>"><br>

  <label for="artwork">Artwork URL:</label>
  <input type="text" id="artwork" name="artwork" value="<%=@album.artwork%>"><br>  

  <input  type="submit" value="Edit Album"><br>
</div>
</form>